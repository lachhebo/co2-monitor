{
	"name":"Co2 Monitor",
	"version":"0.0.2",
	"description":"monitor how much Co2 your internet consumption has produced",
	"permissions": [
		"browsingData",  
		"webNavigation",
		"webRequest",
		"storage",
		"history",
		"<all_urls>"],
	"background":{
		"scripts": ["background.js"],
		"persistents": false
	},
	"icons": {
		"16": "images/co2_16.png",
		"32": "images/co2_32.png",
		"48": "images/co2_48.png",
		"128": "images/co2_128.png"
	},
	"browser_action": {
		"default_icon": {                    
		  "16": "images/co2_16.png",           // optional
		  "32": "images/co2_32.png"            // optional
		},
		"default_title": "Co2-monitor",      // optional; shown in tooltip
		"default_popup": "popup.html"        // optional
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	  },
	"manifest_version":2
}
