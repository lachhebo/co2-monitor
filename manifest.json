{
	"name":"Co2 Monitor",
	"version":"0.0.2",
	"description":"monitor how much Co2 your internet consumption has produced",
	"permissions": [
		"browsingData",  
		"webNavigation",
		"geolocation", 
		"webRequest",
		"storage",
		"history",
		"<all_urls>"],
	"background":{
		"scripts": ["background.js"],
		"persistents": false
	},
	"icons": {
		"16": "images/co2_16.png",
		"32": "images/co2_32.png",
		"48": "images/co2_48.png",
		"128": "images/co2_128.png"
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
		"16": "images/co2_16.png",
		"32": "images/co2_32.png",
		"48": "images/co2_48.png",
		"128": "images/co2_128.png"
		}
	},
	"manifest_version":2
}
